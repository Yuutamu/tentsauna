<%# TODO: TextFont sans系検討 %>
<body bgcolor="#F1EEE7">
  <div class="mb-8 text-center">
    <span class="text-3xl font-bold text-gray-700">
      Products
    </span>
  </div>

  <div class="flex flex-wrap">
    <div class="flex-none w-full max-w-full px-6">
      <%= link_to new_admin_product_path, class: "mb-4 inline-flex items-center justify-center rounded-md bg-indigo-500 p-3 text-white duration-100 ease-in-out hover:bg-indigo-600 focus:outline-none" do %>
        Add New Product
      <% end %>
      <div class="relative flex flex-col min-w-0 mb-6 break-words ">
        <div class="flex-auto px-0 pt-0 pb-2">
          <div class="p-0 overflow-x-auto">
            <table class="items-center w-full mb-0 align-top border-gray-400 text-slate-600">
              <thead class="align-bottom">
                <tr>
                  <th class="px-6 py-3 font-bold text-left align-middle bg-transparent border-b border-gray-300 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-600 opacity-70">Image & Name</th>
                  <th class="px-6 py-3 pl-2 font-bold text-left align-middle bg-transparent border-b border-gray-300 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-600 opacity-70">Price</th>
                  <th class="px-6 py-3 font-bold text-center align-middle bg-transparent border-b border-gray-300 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-600 opacity-70">Stock</th>
                  <th class="px-6 py-3 font-bold text-center align-middle bg-transparent border-b border-gray-300 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-600 opacity-70">Created at</th>
                  <th class="px-6 py-3 font-bold text-center align-middle bg-transparent border-b border-gray-300 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-600 opacity-70">Updated at</th>
                  <th class="px-6 py-3 font-semibold capitalize align-middle bg-transparent border-b border-gray-300 border-solid shadow-none tracking-none whitespace-nowrap opacity-70"></th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |product| %>
                  <tr>
                    <td class="p-2 align-middle bg-transparent border-b border-gray-300 whitespace-nowrap shadow-transparent">
                      <%= link_to admin_product_path(product) do %>
                        <div class="flex px-2 py-1">
                          <div class="w-16 mr-5">
                            <%= image_tag product.image, class: "inline-flex items-center justify-center mr-4 text-white transition-all duration-200 ease-soft-in-out text-sm rounded-xl object-fill" %>
                          </div>
                          <div class="flex flex-col justify-center">
                            <h6 class="text-lg font-semibold text-slate-600"><%= product.name %></h6>
                          </div>
                        </div>
                      <% end %>
                    </td>
                    <td class="p-2 align-middle bg-transparent border-b border-gray-300 whitespace-nowrap shadow-transparent">
                      <p class="font-semibold leading-tight text-sm text-slate-600"><%= number_to_currency(product.price, unit: "¥", strip_insignificant_zeros: true) %></p>
                    </td>
                    <td class="p-2 text-center align-middle bg-transparent border-gray-300 border-b whitespace-nowrap shadow-transparent">
                      <span class="font-semibold leading-tight text-sm text-slate-600"><%= product.stock %></span>
                    </td>
                    <td class="p-2 text-center align-middle bg-transparent border-b border-gray-300 whitespace-nowrap shadow-transparent">
                      <span class="font-semibold leading-tight text-sm text-slate-600"><%= l product.created_at, format: :short %></span>
                    </td>
                    <td class="p-2 text-center align-middle bg-transparent border-b border-gray-300 whitespace-nowrap shadow-transparent">
                      <span class="font-semibold leading-tight text-sm text-slate-600"><%= l product.updated_at, format: :short %></span>
                    </td>
                    <td class="p-2 align-middle bg-transparent border-b border-gray-300 whitespace-nowrap shadow-transparent">
                      <%= link_to edit_admin_product_path(product), class: "font-semibold leading-tight text-xs text-slate-600" do %>
                        Edit
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
