<body bgcolor="#F1EEE7">
  <div class="mb-6 text-center">
    <span class="text-3xl font-bold text-gray-700">
      Customers
    </span>
  </div>

  <div class="flex flex-wrap p-6">
    <div class="flex-none w-full max-w-full px-3">
      <div class="relative flex flex-col min-w-0 mb-6 break-words border-0 border-transparent border-solid rounded-2xl bg-clip-border">
        <div class="flex-auto px-0 pt-0 pb-2">
          <div class="p-0 overflow-x-auto">
            <table class="items-center w-full mb-0 align-top border-gray-200 text-gray-600">
              <thead class="align-bottom">
                <tr>
                  <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-lg border-b-solid tracking-none whitespace-nowrap text-gray-600">Name</th>
                  <th class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-lg border-b-solid tracking-none whitespace-nowrap text-gray-600">email</th>
                  <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-lg border-b-solid tracking-none whitespace-nowrap text-gray-600">Status</th>
                  <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-lg border-b-solid tracking-none whitespace-nowrap text-gray-600">Previous Orders</th>
                  <th class="px-6 py-3 font-semibold capitalize align-middle bg-transparent border-b border-gray-200 border-solid shadow-none tracking-none whitespace-nowrap text-gray-600"></th>
                </tr>
              </thead>
              <tbody>
                <% @customers.each do |customer| %>
                  <tr>
                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                      <div class="flex px-2 py-1">
                        <div class="flex flex-col justify-center">
                          <p class="mb-0 leading-normal text-md"><%= customer.name %></p>
                        </div>
                      </div>
                    </td>

                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                      <p class="font-semibold leading-tight text-md"><%= customer.email %></p>
                    </td>
                    <td class="p-2 leading-normal text-center align-middle bg-transparent border-b text-sm whitespace-nowrap shadow-transparent">
                      <% if customer.status === "normal" %>
                        <span class="bg-blue-100 text-blue-800 text-xs font-semibold p-2 rounded">通常</span>
                      <% elsif customer.status === "withdrawn" %>
                        <span class="bg-yellow-100 text-yellow-800 text-xs font-semibold p-2 rounded">退会済み</span>
                      <% else %>
                        <span class="bg-red-100 text-red-800 text-xs font-semibold p-2 rounded">アカウント停止</span>
                      <% end %>
                      
                    </td>
                    <td class="p-2 leading-normal text-center align-middle bg-transparent border-b text-sm whitespace-nowrap shadow-transparent">
                      <%# 処理速度を早めるために、count ではなく size を利用 %>
                      <span class="bg-blue-100 text-blue-800 text-xs font-semibold p-2 rounded"><%= customer.orders.size %></span>
                    </td>
                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                      <%= link_to admin_customer_path(customer), class: "font-semibold leading-tight text-sm text-slate-400" do %>
                        Details
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
