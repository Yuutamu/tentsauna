<%# MEMO:商品ソートの各表示名を英語のままにしたほうがかっこよいが、UXどうだろ  %>

<body bgcolor="#F1EEE7">
  <div class="mb-8 text-center">
    <span class="text-3xl font-bold text-gray-700">
      Products
    </span>
  </div>
  <div class="flex flex-wrap justify-center md:justify-start px-6">
    <div class="mb-3 w-fit text-md font-medium mr-2 px-4 py-1.5 rounded-md shadow <%= @sort === "latest" ? "bg-gray-500 text-white" : "bg-gray-100 text-gray-700" %>">
      <%= link_to 'latest', products_path(latest: true) %>
    </div>
    <div class="mb-3 w-fit text-md font-medium mr-2 px-4 py-1.5 rounded-md shadow <%= @sort === "price_high_to_low" ? "bg-gray-500 text-white" : "bg-gray-100 text-gray-700" %>">
      <%= link_to 'Price : High', products_path(price_high_to_low: true) %>
    </div>
    <div class="mb-3 w-fit text-md font-medium mr-2 px-4 py-1.5 rounded-md shadow <%= @sort === "price_low_to_high" ? "bg-gray-500 text-white" : "bg-gray-100 text-gray-700" %>">
      <%= link_to 'Price : Low', products_path(price_low_to_high: true) %>
    </div>
  </div>
  <div class="flex flex-wrap justify-center">
    <% @products.each do |product| %>
      <div class="px-6 py-8">
        <div class="w-full max-w-sm bg-gray-100 shadow-md rounded-lg">
          <%= link_to product_path(product) do %>
            <%= image_tag product.image, class: "p-5 object-cover" %>
            <div class="px-5 pb-5">
              <p class="text-xl font-semibold tracking-tight text-gray-600 mb-4"><%= product.name %></p>
              <div class="flex justify-between items-center">
                <span class="text-xl font-bold text-gray-600"><%= number_to_currency(product.price, unit: "¥", strip_insignificant_zeros: true) %></span>
                <% if product.stock > 0 %>
                  <span class="bg-blue-100 text-blue-800 text-xs font-semibold p-2 rounded">In stock</span>
                <% else %>
                  <span class="bg-red-100 text-red-800 text-xs font-semibold p-2 rounded">Out of stock</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</body>