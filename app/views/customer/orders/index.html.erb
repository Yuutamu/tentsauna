<body bgcolor="#F1EEE7">
  <div class="mb-6 text-center">
    <span class="text-3xl font-bold text-gray-700">
      Order Histories
    </span>
  </div>

  <% if @orders.count == 0 %>
    <div class="mx-auto max-w-3xl">
      <p class="mb-8 text-xl text-center text-gray-700">No history</p>
      <div class="flex justify-center">
        <%= link_to products_path, class:'group inline-flex items-center justify-center overflow-hidden rounded-lg p-0.5 font-medium bg-gray-100 text-white hover:bg-[#acae98] focus:ring-gray-100 focus:ring-gray-300' do %>
          <span class='rounded-md bg-[#8c8f70] px-5 py-2.5 transition-all duration-75 ease-in group-hover:bg-opacity-0'>
            Find Products
          </span>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="w-full px-3">
      <div class="shadow-soft-xl rounded-2xl bg-clip-border w-full lg:w-3/5 flex  mx-auto">
        <div class="w-full">
          <ul class="rounded-lg">
            <% @orders.each do |order| %>
              <%= link_to order_path(order) do %>
                <li class="py-7 px-6 mb-4 rounded-t-inherit rounded-xl bg-gray-50 shadow">
                  <div class="mb-5">
                    <p class="mb-4 leading-normal text-xl taxt-gray-600"><%= l order.created_at, format: :short %></p>
                    <p class="text-slate-700 inline-block font-bold text-center uppercase align-middle transition-all text-lg taxt-gray-600">
                      <%= number_to_currency(order.billing_amount, unit: "Â¥", strip_insignificant_zeros: true) %>
                    </p>
                    <span class="ml-2 bg-blue-100 text-blue-800 text-xs font-semibold p-2 rounded">
                      <%= order.status %>
                    </span>
                  </div>
                  <div>
                    <p class="mb-2 leading-tight text-sm taxt-gray-600">Name: <span class="font-semibold taxt-gray-600 sm:ml-2"><%= order.name %></span></p>
                    <p class="mb-2 leading-tight text-sm taxt-gray-600">Postal Code: <span class="font-semibold taxt-gray-600 sm:ml-2"><%= order.postal_code %></span></p>
                    <p class="mb-2 leading-tight text-sm taxt-gray-600">Prefecture: <span class="font-semibold taxt-gray-600 sm:ml-2"><%= order.prefecture %></span></p>
                    <p class="mb-2 leading-tight text-sm taxt-gray-600">Address: <span class="font-semibold taxt-gray-600 sm:ml-2"><%= order.address1 %> <%= order.address2 %></span></p>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</body>
