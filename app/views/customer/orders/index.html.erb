<%# MEMO:UI検討中 %>
<div class="pt-10 mb-6 text-center">
  <span class="text-2xl font-bold font-['Noto Sans'] text-dark-green">
    Order Histories
  </span>
</div>

<% if @orders.count == 0 %>
  <div class="mx-auto">
    <p class="mb-8 text-xl text-center font-['Noto Sans'] font-semibold text-dark-green">No history</p>
    <div class="flex justify-center">
      <%= link_to products_path, class:"group inline-flex items-center justify-center overflow-hidden rounded-lg p-0.5 font-medium text-white bg-light-green hover:bg-[#8FB9AA] focus:ring-gray-100 focus:ring-gray-300" do %>
        <span class="px-5 py-2.5 transition-all duration-75 ease-in group-hover:bg-opacity-0">
          Find Products
        </span>
      <% end %>
    </div>
  </div>
<% else %>

  <%# 開発中 %>
  <div class="w-full px-4">
    <div class="shadow-soft-xl rounded-2xl bg-clip-border w-full lg:w-3/5  mx-auto">
      <% @orders.each do |order| %>
        <%= link_to order_path(order) do %>
          <div class="py-7 px-6 mb-4 rounded-xl bg-gray-50 shadow">
            <div class="text-center text-dark-green text-lg font-semibold font-['Noto Sans'] tracking-wider">
              <%= l order.created_at, format: :time %>
            </div>
            
            <div class="w-full h-[2px] bg-light-green mb-4">
            </div>

            <div>
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans JP'] tracking-wider">注文金額: <span class="text-dark-green text-base font-semibold font-['Noto Sans'] tracking-wide"><%= number_to_currency(order.billing_amount, unit: "¥", strip_insignificant_zeros: true) %></span></p>
            </div>
            
            <div class="mt-2">
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans']">Name: <span class="text-dark-green text-base font-semibold font-['Noto Sans JP']"><%= order.name %></span></p>
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans']">Postal Code: <span class="text-dark-green text-base font-semibold font-['Noto Sans']"><%= order.postal_code %></span></p>
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans']">Prefecture: <span class="text-dark-green text-base font-semibold font-['Noto Sans JP']"><%= order.prefecture %></span></p>
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans']">Address: <span class="text-dark-green text-base font-semibold font-['Noto Sans JP']"><%= order.address1 %> <%= order.address2 %></span></p>
            </div>

            <div class="flex mb-4">
              <div class="pt-1 items-center text-base text-dark-green font-semibold font-['Noto Sans']">
                Delivery status:
              </div>
              <div class="justify-end items-center ml-2 bg-blue-100 text-blue-800 text-xs font-semibold font-['Noto Sans'] p-2 rounded">
                <%= order.status %>
              </div>
            </div>
            
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <%# -草案２ mt-20 -start- %>
  <div class="w-full px-4 mt-20">
    <div class="shadow-soft-xl rounded-2xl bg-clip-border w-full lg:w-3/5  mx-auto">
      <% @orders.each do |order| %>
        <%= link_to order_path(order) do %>
          <div class="py-7 px-6 mb-4 rounded-xl bg-gray-50 shadow">
            <div class="text-left text-dark-green text-lg font-semibold font-['Noto Sans'] tracking-wider">
              <%= l order.created_at, format: :time %>
            </div>
            
            <div class="w-full h-[2px] bg-light-green mb-4">
            </div>

            <div>
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans JP'] tracking-wider">注文金額: <span class="ml-3 text-dark-green text-base font-semibold font-['Noto Sans'] tracking-wide"><%= number_to_currency(order.billing_amount, unit: "¥", strip_insignificant_zeros: true) %></span></p>
            </div>

            <div class="flex mb-4">
              <div class="mr-2 pt-1 items-center text-base text-dark-green font-semibold font-['Noto Sans']">
                Delivery status:
              </div>
              <div class="justify-end items-center ml-2 bg-blue-100 text-blue-800 text-xs font-semibold font-['Noto Sans'] p-2 rounded">
                <%= order.status %>
              </div>
            </div>

            <div class="pt-2 text-left text-dark-green text-lg font-semibold font-['Noto Sans JP'] tracking-wider">
              顧客情報
            </div>
            
            <div class="w-full h-[2px] bg-light-green mb-4">
            </div>
            
            <div class="mt-2">
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans']">Name: <span class="text-dark-green text-base font-semibold font-['Noto Sans JP']"><%= order.name %></span></p>
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans']">Postal Code: <span class="text-dark-green text-base font-semibold font-['Noto Sans']"><%= order.postal_code %></span></p>
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans']">Prefecture: <span class="text-dark-green text-base font-semibold font-['Noto Sans JP']"><%= order.prefecture %></span></p>
              <p class="mb-2 text-base text-dark-green font-semibold font-['Noto Sans']">Address: <span class="text-dark-green text-base font-semibold font-['Noto Sans JP']"><%= order.address1 %> <%= order.address2 %></span></p>
            </div>

            

          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <%# -草案２ mt-20 -end- %>

<% end %>
