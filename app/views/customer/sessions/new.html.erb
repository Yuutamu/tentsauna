<body bgcolor="#F1EEE7">
  <div class="mb-6 text-center">
    <span class="text-3xl font-bold font-['Noto Sans'] text-dark-green">
      Sign In
    </span>
  </div>

  <div class='flex flex-wrap justify-center mb-6'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-11/12 md:w-10/12 xl:w-8/12" }, data: { turbo: false } )  do |f| %>
      <%= render "customer/shared/error_messages", resource: resource %>
      <div class="mb-6">
        <%= f.label :email, class: "mb-2 block text-sm text-dark-green" %>
        <%= f.email_field :email, class: "w-full rounded-md border border-light-green py-2 px-3 placeholder:text-gray-300 focus:border-indigo-300 focus:outline-none focus:ring focus:ring-indigo-100" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: "mb-2 block text-sm text-dark-green" %>
        <%= f.password_field :password, class: "w-full rounded-md border border-light-green py-2 px-3 placeholder:text-gray-300 focus:border-indigo-300 focus:outline-none focus:ring focus:ring-indigo-100" %>
      </div>
      <%= f.submit 'ログイン', class: "w-full h-[34px] mx-4 bg-light-green text-white text-sm font-bold font-['Noto Sans JP'] hover:text-gray-600 rounded-3xl justify-center items-center" %>
    <% end %>
  </div>

  <div class="text-center">
    <%= render "customer/shared/links" %>
  </div>
</body>
